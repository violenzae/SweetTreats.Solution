@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Flavor

<h2>Add A Treat</h2>

<h4>Add a treat that has this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")<br>

  <input class="btn" type="submit" value="Save changes" />
}